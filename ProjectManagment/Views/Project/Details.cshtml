@model ProjectManagment.Models.ProjectModel

@{
    ViewData["Title"] = "Project Details";
}

<h2>@Model.Name</h2>
<p>@Model.Description</p>

<h3>Tasks</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.TaskModels)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline</td>
                <td>@task.Status</td>
                <td>
                    <a asp-controller="Task" asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                    <a asp-controller="Task" asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h4>Add New Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @await Html.PartialAsync("~/Views/Task/CreateTaskPartial.cshtml", new ProjectManagment.Models.TaskModel { ProjectId = Model.Id })
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}